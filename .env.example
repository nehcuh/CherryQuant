# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Claude API配置 (可选)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 期货配置
DEFAULT_SYMBOL=rb2501
EXCHANGE=SHFE
GATEWAY_NAME=CTP

# 决策配置
DECISION_INTERVAL=300  # 决策间隔(秒)
MAX_POSITION_SIZE=10    # 最大持仓手数
LEVERAGE=5             # 杠杆倍数

# 数据源配置
DATA_SOURCE=akshare    # 可选: akshare, tushare, simnow, vnpy
SIMNOW_USERID=         # Simnow用户ID
SIMNOW_PASSWORD=       # Simnow密码
SIMNOW_BROKER_ID=9999  # Simnow期货公司ID (默认9999)
TUSHARE_TOKEN=         # 如果使用tushare，填写你的Tushare Pro Token

# 本地数据库配置（与 docker/docker-compose.yml 对应）
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cherryquant
POSTGRES_USER=cherryquant
POSTGRES_PASSWORD=cherryquant123
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=./logs
