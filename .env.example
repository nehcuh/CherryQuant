# ==========================================
# CherryQuant 配置文件模板
# 复制此文件为 .env 并填写实际值
# ==========================================

# ==========================================
# AI 模型配置
# ==========================================
# OpenAI API配置（必需）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Claude API配置（可选，用于多模型对比）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==========================================
# 数据模式配置
# ==========================================
# 数据模式: live(CTP实时) | dev(AKShare准实时)
# live模式: 需要CTP账户，获取真实Tick数据
# dev模式: 使用AKShare免费API，适合开发测试
DATA_MODE=dev

# 数据源配置
DATA_SOURCE=tushare

# ==========================================
# Tushare Pro 配置
# ==========================================
# Tushare Pro Token（推荐，用于历史数据和主力合约查询）
# 注意: 分钟线数据需要2000+积分，主力合约映射(fut_mapping)需要2000+积分
# 获取Token: https://tushare.pro/register
TUSHARE_TOKEN=your_tushare_pro_token_here

# ==========================================
# CTP 网关配置（live模式必需）
# ==========================================
# CTP用户凭证
CTP_USERID=your_ctp_userid
CTP_PASSWORD=your_ctp_password
CTP_BROKER_ID=9999

# CTP服务器地址（SimNow模拟环境示例）
# 生产环境请使用实际期货公司提供的地址
CTP_MD_ADDRESS=tcp://180.168.146.187:10131
CTP_TD_ADDRESS=tcp://180.168.146.187:10130

# AppID和AuthCode（某些期货公司需要）
CTP_APPID=
CTP_AUTH_CODE=

# 产品信息
CTP_PRODUCT_INFO=CherryQuant

# ==========================================
# 交易配置
# ==========================================
# 网关名称
GATEWAY_NAME=CTP

# 默认交易所（仅作为降级使用）
DEFAULT_EXCHANGE=SHFE

# ==========================================
# 策略配置
# ==========================================
# 策略配置文件路径
STRATEGY_CONFIG=config/strategies.json

# 决策间隔(秒)
DECISION_INTERVAL=300

# 风险控制
MAX_POSITION_SIZE=10
LEVERAGE=5
RISK_PER_TRADE=0.02

# ==========================================
# 数据库配置
# ==========================================
# PostgreSQL (TimescaleDB) 配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cherryquant
POSTGRES_USER=cherryquant
POSTGRES_PASSWORD=cherryquant123

# PostgreSQL连接池配置
POSTGRES_MIN_POOL_SIZE=5
POSTGRES_MAX_POOL_SIZE=20

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==========================================
# Web服务配置
# ==========================================
# API服务端口
WEB_API_PORT=8000
WEB_API_HOST=0.0.0.0

# WebSocket端口（实时数据推送）
WEBSOCKET_PORT=8001

# 是否启用Web服务
ENABLE_WEB_API=true

# ==========================================
# 监控和告警配置
# ==========================================
# 是否启用风险监控
ENABLE_RISK_MONITOR=true

# 是否启用告警系统
ENABLE_ALERT_SYSTEM=true

# 告警通知方式（email, webhook, log）
ALERT_METHODS=log

# Webhook URL（如果使用webhook通知）
ALERT_WEBHOOK_URL=

# ==========================================
# 日志配置
# ==========================================
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志目录
LOG_DIR=./logs

# 日志轮转（单位：MB）
LOG_MAX_SIZE=100

# 保留日志文件数量
LOG_BACKUP_COUNT=30

# ==========================================
# 环境配置
# ==========================================
# 运行环境: development, production
ENVIRONMENT=development

# 是否启用调试模式
DEBUG=false

# 时区
TIMEZONE=Asia/Shanghai

# ==========================================
# 高级配置（通常不需要修改）
# ==========================================
# K线聚合周期（分钟）
KLINE_PERIODS=5,10,30,60

# 数据缓存TTL（秒）
DATA_CACHE_TTL=3600

# API请求超时（秒）
API_TIMEOUT=30

# 最大重试次数
MAX_RETRIES=3

# ==========================================
# 注意事项
# ==========================================
# 1. 敏感信息不要提交到git仓库
# 2. 生产环境务必修改所有默认密码
# 3. CTP账户信息请妥善保管
# 4. Tushare Token可在 https://tushare.pro/user/token 获取
# 5. DATA_MODE=live需要有效的CTP账户
# 6. 首次运行建议使用dev模式测试
